# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Application Settings
COST_ANOMALY_THRESHOLD=20
DATA_REFRESH_INTERVAL=300

# Cross-Account Access (if using)
CROSS_ACCOUNT_ROLE_NAME=AWSCostMonitorCrossAccountRole
EXTERNAL_ID=your-unique-external-id-here

# Streamlit Settings (optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Feature Flags
ENABLE_FORECASTING=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_RESOURCE_INVENTORY=true

# Performance Settings
MAX_PARALLEL_THREADS=10
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=INFO